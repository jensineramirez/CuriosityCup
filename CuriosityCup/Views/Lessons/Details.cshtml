@model CuriosityCup.Models.Lesson

@{
    ViewData["Title"] = "Details";
}

<div>
    <h4>@Html.DisplayFor(model => model.Title)</h4>

    <h6>@Html.DisplayFor(model => model.Teacher.Id)</h6>
    <hr />
    <dl class="row">
        <dd class="col-sm-10">
            <iframe src="@Model.Video" frameborder="0" allowtransparency="false" allowFullScreen="allowFullScreen"></iframe>
        </dd>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SectionDescription)
        </dd>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Subject.SubjectName)
        </dd>
    </dl>
</div>
<div>
    @*<a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |*@
    <a asp-controller="Lessons" asp-action="LessonsBySubject" asp-route-id="@Model.SubjectId">Back to List</a>
</div>
